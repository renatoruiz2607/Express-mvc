<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/products.css">
  </head>
  <body>
    <%- include('./partials/header') %>
    <main class="container">
      <h1 class="marginBottom"><%= name %></h1>
      <h2 class="marginBottom">Cadastro de produtos</h2>
      <form action="" method="POST">
        <div class="row g-3 align-items-center marginBottom">
          <div class="col-auto">
            <label class="col-form-label" for="name">Nome do produto</label>
          </div>
          <div class="col-auto">
            <input class="form-control" name="name" id="name" type="text">  
          </div>
        </div>
        <div class="row g-3 align-items-center marginBottom">
          <div class="col-auto">
            <label class="col-form-label" for="price">Pre√ßo do produto</label>
          </div>
          <div class="col-auto">
            <input class="form-control" name="price" id="price" type="number">
          </div>
        </div>
          <% types.forEach(function(type) {%>
            <div class="form-check form-check-inline">
              <input class="form-check-input marginBottom" type="radio" name="type" id="<% type.id %>" value="<%= type.id %>" />
              <label class="form-check-label marginBottom" for="<%= type.id %>"><%= type.label %></label>
            </div>
          <%}) %>
        <div>
          <input class="btn btn-primary" type="submit" value="Cadastrar produto">
          <input class="btn btn-primary" type="reset" value="Cancelar">
        </div>
      </form>
    </main>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
  </body>
</html> 